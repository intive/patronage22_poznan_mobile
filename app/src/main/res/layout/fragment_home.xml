<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type = "android.view.View"/>
        <variable
            name="homeViewModel"
            type="com.intive.patronage22.intivi.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.HomeFragment">

        <TextView
            android:id="@+id/error_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="75dp"
            android:gravity="center"
            android:text="@{homeViewModel.apiErrorHome}"
            android:visibility="@{(homeViewModel.apiErrorHome == null &amp;&amp; homeViewModel.popularMoviesList == null)? View.VISIBLE : View. INVISIBLE }"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/loading_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{homeViewModel.recommended_image_url == null ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="3dp"/>

        <LinearLayout
            android:id="@+id/header_bar"
            style="@style/headerBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:outlineProvider="none"
            android:gravity="center|start"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/app_logo_height"
                android:layout_height="@dimen/app_logo_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/app_logo_margin_start"
                android:background="@drawable/app_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_name_margin_start"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="@style/headline6" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/filter_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="2dp"
            android:outlineProvider="none"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filter_first"
                    style="@style/filter_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular"
                    android:onClick="@{() -> homeViewModel.fetchPopular()}"/>

                <TextView
                    android:id="@+id/filter_second"
                    style="@style/filter_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animation"
                    android:onClick="@{() -> homeViewModel.fetchGenreMembers(16)}"/>

                <TextView
                    android:id="@+id/filter_third"
                    style="@style/filter_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/horror"
                    android:onClick="@{() -> homeViewModel.fetchGenreMembers(27)}"/>

                <TextView
                    android:id="@+id/filter_fourth"
                    style="@style/filter_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drama"
                    android:onClick="@{() -> homeViewModel.fetchGenreMembers(18)}"/>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_collapseMode="parallax">

                        <ImageView
                            android:id="@+id/recommendedMovie"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/details_photo"
                            app:image_url="@{homeViewModel.recommended_image_url}"
                            tools:ignore="ContentDescription"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/gradient_background"
                            tools:ignore="ContentDescription"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/gradient_bottom_to_top"
                            tools:ignore="ContentDescription"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.75">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semibold"
                                android:textSize="12sp"
                                tools:text="Fantasy"
                                android:text="@{homeViewModel.recommended_genre}"
                                android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"/>

                            <TextView
                                android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="The Witcher"
                                android:text="@{homeViewModel.popularMoviesList.get(homeViewModel.recommended_movie).title}"
                                android:fontFamily="@font/inter_bold"
                                android:textSize="40sp"
                                android:layout_marginBottom="8dp"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/recommended_published_date"
                                    android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    tools:text="2019"
                                    android:text="@{homeViewModel.popularMoviesList.get(homeViewModel.recommended_movie).releaseDate.substring(0, 4)}"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/detailsInfoTextSize"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toLeftOf="@+id/recommended_circle_1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <ImageView
                                    android:id="@+id/recommended_circle_1"
                                    android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/detailsStartMargin"
                                    app:srcCompat="@drawable/circle_shape"
                                    tools:ignore="ContentDescription"
                                    app:layout_constraintLeft_toRightOf="@+id/recommended_published_date"
                                    app:layout_constraintRight_toLeftOf="@+id/recommended_seasons"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                    android:id="@+id/recommended_seasons"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/detailsStartMargin"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="Series"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/detailsInfoTextSize"
                                    app:layout_constraintLeft_toRightOf="@+id/recommended_circle_1"
                                    app:layout_constraintRight_toLeftOf="@+id/recommended_circle_2"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>


                                <ImageView
                                    android:id="@+id/recommended_circle_2"
                                    android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/detailsStartMargin"
                                    app:srcCompat="@drawable/circle_shape"
                                    tools:ignore="ContentDescription"
                                    app:layout_constraintLeft_toRightOf="@+id/recommended_seasons"
                                    app:layout_constraintRight_toLeftOf="@+id/recommended_rating"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                    android:id="@+id/recommended_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/detailsStartMargin"
                                    android:fontFamily="@font/inter_semibold"
                                    tools:text="PG"
                                    android:text="@{`` + homeViewModel.popularMoviesList.get(homeViewModel.recommended_movie).voteAverage}"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/detailsInfoTextSize"
                                    app:layout_constraintLeft_toRightOf="@+id/recommended_circle_2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:visibility="@{homeViewModel.recommended_image_url == null ? View.INVISIBLE : View.VISIBLE}"
                                android:id="@+id/recommended_watch_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_home_watch_button"/>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_semi_circle"
                                android:rotation="-90"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_chevron_left_stroke"
                                android:rotation="90"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:id="@+id/recyclerViewRoot"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/bastille"
                        android:foregroundGravity="center"
                        android:paddingTop="8dp"
                        tools:listitem="@layout/item_grid_home" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>