<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="0dp"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/bastille">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movieAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/avatar_moonfall"
            app:shapeAppearanceOverlay="@style/roundedImage" />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieAvatar"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter"
            android:lineHeight="20sp"
            android:text="Untitled"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/favorities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_below="@id/movieAvatar"
            android:layout_alignParentEnd="true"
            android:nextFocusRight="@id/movieAvatar"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:button="@drawable/checkbox_favourites"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>